{
  "name": "moebius",
  "type": "commonjs",
  "version": "2.2.0",
  "description": "Modern ASCII Art Editor with custom font and color support",
  "repository": {
    "type": "git",
    "url": "https://github.com/hlotvonen/moebius.git"
  },
  "main": "app/moebius.js",
  "scripts": {
    "start": "electron --no-sandbox --inspect=5858 .",
    "build-script": "browserify app/web_client/script.js -o server/script.js",
    "build": "npx electron-builder -mwl",
    "build-mac": "npx electron-builder -m",
    "build-win": "npx electron-builder -w",
    "build-linux": "npx electron-builder -l",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:web": "eslint app/web/",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "start:web": "vite serve app/web --host --port 3000",
    "build:web": "vite build app/web --outDir ../../dist/web",
    "preview:web": "vite preview",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:e2e": "playwright test",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=webkit",
    "test:edge": "playwright test --project=edge",
    "test:mobile": "playwright test --project=\"Mobile Chrome\" --project=\"Mobile Safari\"",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:critical": "playwright test --grep=\"@critical\"",
    "test:visual": "playwright test --grep=\"visual\"",
    "test:performance": "playwright test --grep=\"performance\"",
    "test:accessibility": "playwright test --grep=\"accessibility\"",
    "test:install": "playwright install",
    "test:report": "playwright show-report",
    "test:baselines": "./scripts/generate-baselines.sh",
    "test:manual": "echo 'ðŸ“‹ Manual testing checklist: DOCS/MANUAL_TESTING_CHECKLIST.md'"
  },
  "author": "Andy Herbert <andy.herbert@gmail.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@vitejs/plugin-legacy": "^4.1.0",
    "axe-core": "^4.8.0",
    "browserify": "^16.5.1",
    "electron": "^12.0.2",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "express": "^4.17.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.4",
    "vite": "^4.5.0",
    "workbox-cli": "^7.0.0"
  },
  "dependencies": {
    "@andreekeberg/imagedata": "^1.0.2",
    "discord-rpc": "^3.1.1",
    "electron-debug": "^3.2.0",
    "electron-is-dev": "^1.2.0",
    "eventemitter3": "^5.0.0",
    "iconv-lite": "^0.6.3",
    "idb": "^7.1.0",
    "json5": "^2.1.3",
    "linkifyjs": "^2.1.9",
    "minimist": "^1.2.5",
    "upng-js": "^2.1.0",
    "ws": "^7.4.6",
    "yarn": "^1.22.21"
  }
}
